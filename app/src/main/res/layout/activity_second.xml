<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#002751"
            android:backgroundTint="#002751"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/tvNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edNom"
                android:textColor="#EBEBEB"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tvPrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edPrenom"
                android:textColor="#EBEBEB"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tvNumTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edNumTel"
                android:textColor="#EBEBEB"
                android:textColorHint="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tvCourriel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edCourriel"
                android:textColor="#EBEBEB"
                android:textColorHint="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_ajouter" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>